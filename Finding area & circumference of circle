#include<stdio.h>
#include<math.h>
#define pi 3.14

int main()
{
    int r;
    float a,circ;
    printf("Enter the radius of the circle");
    scanf("%d",&r);

    a=pi*r*r;
    circ=2*pi*r;
    printf("The area of the circle is: %f\n",a);
    printf("The circumference of the circle is: %f\n",circ);

    return 0;
}
